@model companhia_aerea.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes Cliente #@Html.DisplayFor(model => model.Id) - @Html.DisplayFor(model => model.Nome) </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumVoos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumVoos)
        </dd>
    </dl>
</div>
<div>
    <div class="form-group" style="margin-top: 10px">
        <input type="submit" value="Salvar" class="btn btn-outline-success" />
        <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
    </div>
</div>
