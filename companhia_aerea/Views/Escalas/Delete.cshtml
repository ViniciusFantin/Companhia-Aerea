@model companhia_aerea.Models.Escala

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Escala #@Html.DisplayNameFor(model => model.Id)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Saida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Saida)
        </dd>
        <dt class = "col-sm-2">
