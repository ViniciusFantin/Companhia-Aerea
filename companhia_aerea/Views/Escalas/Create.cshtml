@model companhia_aerea.Models.Escala

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Escala</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdVoo" class="control-label">Voo</label>
                <select asp-for="IdVoo" class ="form-control" asp-items="ViewBag.IdVoo"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdAeroporto" class="control-label">Aeroporto</label>
                <select asp-for="IdAeroporto" class ="form-control" asp-items="ViewBag.IdAeroporto"></select>
            </div>
            <div class="form-group">
                <label asp-for="Saida" class="control-label"></label>
                <input asp-for="Saida" class="form-control" />
                <span asp-validation-for="Saida" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Salvar" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
